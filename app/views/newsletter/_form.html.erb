<%= form_for(@newsletter, {url: newsletter_path, method: 'POST'}) do |f| %>
  <div class="field">
    <div class="col-md-6">
      <%= f.label :name %>
      <div class='input-group'>
      <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
      <%= f.text_field :name, class: 'form-control', required: 'required',
      placeholder: 'Digite o nome', autocomplete: 'off' %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="col-md-6">
      <%= f.label :email %>
      <div class='input-group'>
      <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
      <%= f.text_area :email, class: 'form-control', required: 'required',
      placeholder: 'Digite o e-mail', autocomplete: 'off' %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="col-md-12">
      <%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
    </div>
  </div>
<% end %>
