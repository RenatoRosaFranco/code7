<%= form_for(@contact, {url: contact_url, method: 'POST'}) do |f| %>
    <div class="field">
        <div class="col-md-6">
           <%= f.label :name %>
           <%= f.text_field :name, class: 'form-control', required: 'required',
           placeholder: 'Digite o nome', autocomplete: 'off' %>
        </div>
    </div>
    <div class="field">
        <div class="col-md-6">
            <%= f.label :phone %>
            <%= f.phone_field :phone, class: 'form-control', required: 'required',
            placeholder: 'Digite o telefone', autocomplete: 'off' %>
        </div>
    </div>
    <div class="field">
        <div class="col-md-12">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', required: 'required',
            placeholder: 'Digite o e-mail', autocomplete: 'off' %>
        </div>
    </div>
    <div class="field">
        <div class="col-md-12">
            <%= f.label :message %>
            <%= f.text_area :message, class: 'form-control', required: 'required',
            placeholder: 'Escreva sua mensagem...', autocomplete: 'off' %>
        </div>
    </div>
    <div class="field">
        <div class="col-md-12">
            <%= f.submit nil, class: 'btn btn-primary btn-lg top' %>
        </div>
    </div>
<% end %>
